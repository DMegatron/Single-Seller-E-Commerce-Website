<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card-title {
            color: #343a40;
            font-weight: 600;
        }

        .btn-warning {
            color: #fff;
            background-color: #ff9800;
            border: none;
        }

        .btn-warning:hover {
            background-color: #e68900;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

            {
                {
                !-- .card {
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                }

                .card:hover {
                    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
                }

                --
            }
        }

        .badge {
            font-size: 0.85rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>

<body class="bg-light">
    <div class="container my-5">
        <!-- Page Header -->
        <div class="card shadow-sm mb-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h1 class="card-title mb-0">Products</h1>
                <a href="/upload" class="btn btn-primary btn-lg">Add Product</a>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form action="/productRoute/search" method="GET" class="mb-4">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Search products" required>
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Products List -->
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <!-- Product Image -->
                    <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}"
                        style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text text-muted">{{this.description}}</p>
                        <p class="text-primary fw-bold">Price: ${{this.price}}</p>
                        <p class="badge bg-secondary">{{this.category}}</p>

                        <!-- Update and Delete Buttons -->
                        <div class="mt-3 d-flex">
                            <a href="/myProducts/update/{{this.id}}" class="btn btn-warning btn-sm me-2">Update</a>
                            <a href="/myProducts/delete/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>