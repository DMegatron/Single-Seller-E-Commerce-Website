<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <!-- Page Title -->
        <div class="text-center mb-4">
            <h1 class="display-4">Products</h1>
            <p class="text-muted">YOUR PRODUCTS</p>
        </div>

        <!-- Products List -->
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <!-- Product Image -->
                    <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}" style="height: 200px; object-fit: cover;">
                    
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="text-primary fw-bold">Price: ${{this.price}}</p>
                        <p class="badge bg-secondary">{{this.category}}</p>

                        <!-- Update and Delete Buttons -->
                        <div class="mt-3">
                            <a href="/myProducts/update/{{this.id}}" name="update" class="btn btn-warning btn-sm me-2">Update</a>
                            <a href="/myProducts/delete/{{this.id}}" name="delete" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
