<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-tile {
            height: 400px; /* Adjust height as needed */
        }

        .product-image {
            height: 100%; 
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6">Product Details</h1>
            <a href="/cart" class="btn btn-outline-primary btn-lg me-3">
                Cart <span class="badge bg-primary">0</span>
            </a>
        </div>

        <!-- Product Card -->
        <div class="card shadow-sm product-tile">
            <div class="row g-0 h-100">
                <!-- Product Image -->
                <div class="col-md-5">
                    <img 
                        src="{{product.imageUrl}}" 
                        alt="{{product.name}}" 
                        class="img-fluid rounded-start product-image"
                    >
                </div>
                <!-- Product Details -->
                <div class="col-md-7">
                    <div class="card-body d-flex flex-column">
                        <div>
                            <h3 class="card-title fw-bold">{{product.name}}</h3>
                            <p class="text-muted">{{product.category}}</p>
                            <p class="card-text">{{product.description}}</p>
                        </div>
                        <div>
                            <h4 class="text-primary fw-bold">Price: ${{product.price}}</h4>
                        </div>
                        <div class="d-flex mt-4">
                            <!-- Add to Cart Button -->
                            <form action="/cart/add/{{product._id}}" method="POST" class="me-3">
                                <button type="submit" class="btn btn-success btn-lg">Add to Cart</button>
                            </form>

                            <!-- Back to Products Button -->
                            <a href="/productRoute" class="btn btn-secondary btn-lg">Back to Products</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
