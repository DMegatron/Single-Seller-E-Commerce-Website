<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-tile {
            height: 400px; /* Adjust height as needed */
        }

        .product-image {
            height: 100%; 
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <!-- Header -->
        <div class="mb-4">
            <h1 class="display-6">Product Details</h1>
        </div>

        <!-- Product Card -->
        <div class="card shadow-sm product-tile">
            <div class="row g-0 h-100">
                <!-- Product Image -->
                <div class="col-md-5">
                    <img 
                        src="{{product.imageUrl}}" 
                        alt="{{product.name}}" 
                        class="img-fluid rounded-start product-image"
                    >
                </div>
                <!-- Product Details -->
                <div class="col-md-7">
                    <div class="card-body d-flex flex-column">
                        <div>
                            <h3 class="card-title fw-bold">{{product.name}}</h3>
                            <p class="text-muted">{{product.category}}</p>
                            <p class="card-text">{{product.description}}</p>
                        </div>
                        <div>
                            <h4 class="text-primary fw-bold">Price: ${{product.price}}</h4>
                            <h5 class="text-info fw-bold">Quantity: {{product.quantity}}</h5> <!-- Added Quantity Field -->
                        </div>
                        <div class="d-flex mt-4">
                            <!-- Update Button -->
                            <a href="/myProducts/update/{{product.id}}" class="btn btn-warning btn-lg me-3">Update</a>

                            <!-- Delete Button -->
                            <a href="/myProducts/delete/{{product.id}}" class="btn btn-danger btn-lg">Delete</a>

                            <!-- Back to Products Button -->
                            <a href="/myProducts" class="btn btn-secondary btn-lg ms-auto">Back to Products</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
