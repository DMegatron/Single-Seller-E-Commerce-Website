<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container my-5">
        <h1 class="mb-4">Welcome, {{fname}}</h1>

        <!-- Total Amount Section -->
        <div class="bg-white p-4 mb-4 shadow-sm rounded d-flex justify-content-between align-items-center">
            <div>
                <h2>Your Cart</h2>
                <h4>Total Amount: <span class="text-success">${{totalAmount}}</span></h4>
            </div>
            <a href="#" class="btn btn-primary btn-lg">Buy Now</a>
        </div>

        <!-- Product Cards -->
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{this.productId.imageUrl}}" class="card-img-top" alt="{{this.productId.name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.productId.name}}</h5>
                        <p class="card-text">{{this.productId.description}}</p>
                        <p class="text-primary fw-bold">Price: ${{this.productId.price}}</p>
                        <p class="badge bg-secondary">{{this.productId.category}}</p>
                        <p class="text-muted">Quantity: {{this.quantity}}</p>
                        <form action="/cart/remove/{{this.productId._id}}" method="POST">
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>