<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bazario</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container my-5">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4 text-primary">Welcome, {{fname}}</h1>
            <!-- Cart and Logout Buttons -->
            <div>
                <a href="/cart" class="btn btn-outline-primary btn-lg me-3">
                    Cart
                </a>
                <a href="/logout" class="btn btn-outline-danger btn-lg">Logout</a>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form action="/productRoute/search" method="get" class="d-flex">
                    <input type="text" name="q" class="form-control me-2" placeholder="Search for products..."
                        aria-label="Search" required>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
        </div>

        <!-- Products List -->
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100" onclick="window.location.href='/productRoute/{{this.id}}'">
                    <!-- Product Image -->
                    <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}"
                        style="height: 200px; object-fit: cover;">

                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text text-muted">{{truncate this.description 80}}</p>
                        <p class="text-primary fw-bold">Price: ${{this.price}}</p>
                        <p class="badge bg-secondary">{{this.category}}</p>

                        <!-- Add to Cart Button -->
                        <div class="mt-3">
                            <form action="/cart/add/{{this._id}}" method="POST" class="d-flex">
                                <button type="submit" class="btn btn-success btn-lg btn-uniform"
                                    onclick="event.stopPropagation();">
                                    Add to Cart
                                </button>
                                <div class="ms-3">
                                    <label for="quantity" class="form-label visually-hidden">Quantity</label>
                                    <select name="quantity" id="quantity" class="form-select form-select-uniform"
                                        onclick="event.stopPropagation();">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>